//- //- includes utils.pug
extends layout

block content
  link(rel="stylesheet" href="/stylesheets/comics.css")
  script(src="/javascripts/comics.js" type="module" defer)
  div(id='comicsGrid')
    each comic in comics
      div(class='comicsCells')
        div(class="comic_img")
          a(href=`/comics/${comic.id}`)
            img(src=comic.coverUrl)
        button(type='button' class='shelf_btn') Add To Shelf
        //- button(type='button' class='btn_read' id=comic.id) Want To Read
        //- el should be status[i]
        each el in status
          if ((el.hasRead===true) && (el.wantsToRead===true) &&  (el.comicId===comic.id))
            button(type='button' class='btn_read' id=comic.id) Want To Read
          else if ((el.hasRead===false) && (el.wantsToRead===true) &&  (el.comicId===comic.id))
            button(type='button' class='btn_read' id=comic.id) Has Read
          else if ((el.hasRead===true) && (el.wantsToRead===false) &&  (el.comicId===comic.id))
            button(type='button' class='btn_read' id=comic.id) Re-Read
